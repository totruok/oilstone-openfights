<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Open"/>

    <style name="Kit" />

    <style name="Kit.Ripple">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Open.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/whitney_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Open.Text.Card" />

    <style name="Open.Text.Card.Name">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Open.Text.Card.Balance">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="Open.Text.Transaction">
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="Open.Text.Transaction.Date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/open_b2</item>
    </style>

    <style name="Open.Text.Transaction.Status">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b2</item>
    </style>

    <style name="Open.Text.Transaction.Name">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Text.Transaction.Description">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Text.Transaction.Summary">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>


    <style name="Open.Text.Subscription">
        <!--<item name="android:paddingTop">@dimen/small</item>-->
        <!--<item name="android:paddingBottom">@dimen/small</item>-->
    </style>

    <style name="Open.Text.Subscription.Date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/open_b2</item>
    </style>

    <style name="Open.Text.Subscription.Status">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/open_b2</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="Open.Text.Subscription.Name">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>


    <style name="Open.Text.Subscription.Title">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
        <item name="android:background">@color/open_b7</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="Open.Text.Subscription.Description">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Text.Subscription.Summary">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Text.Message" />

    <style name="Open.Text.Message.Name">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Text.Message.Text">
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Button" parent="Kit.Ripple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/whitney_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Open.Button.ForCard">
        <item name="android:fontFamily">@font/whitney_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_button_rect</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/open_b1</item>
    </style>

    <style name="Open.Button.ForSubscriptions">
        <item name="android:background">@drawable/bg_button_rect</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">@dimen/medium</item>
    </style>

    <style name="Open.Text.A8">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Open.Text.A7">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Open.Text.A6">
        <item name="android:textSize">64sp</item>
    </style>

</resources>
