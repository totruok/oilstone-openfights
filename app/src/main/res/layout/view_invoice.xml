<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Kit.Ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/date"
            style="@style/Open.Text.Transaction.Date" />

        <TextView
            android:id="@id/status"
            style="@style/Open.Text.Transaction.Status" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/name"
                style="@style/Open.Text.Transaction.Name"
                android:layout_gravity="center_horizontal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size" />

        </LinearLayout>

        <TextView
            android:id="@id/description"
            style="@style/Open.Text.Transaction.Description"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@id/summary"
            style="@style/Open.Text.Transaction.Summary" />
    </LinearLayout>

</LinearLayout>